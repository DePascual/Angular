
<div class="jumbotron text-center" ng-controller="loginCtrl">
    <h1>LOGIN</h1>
    <div class="contact-item" ng-repeat="alumno in alumnos | orderBy: 'nombre'">
        <div class="nombre">{{alumno.nombre}} - {{alumno.telefono}}</div>
        <span class="curso">{{alumno.curso}}</span>
    </div>

    <hr />
   
    <div class="from-group" ng-controller="loginCtrl">

        <div id="alertModal" class="modal fade">
            <div class="modal-dialog">
                <div class="modal-content">
                    <!-- dialog body -->
                    <div class="modal-body">
                        <button type="button" id="btn" value="Close" class="close" data-dismiss="modal">×</button>
                        {{info}}
                    </div>
                    <!-- dialog buttons -->
                    <div class="modal-footer">
                        <button type="button" ng-click="alertmsg()" class="btn btn-primary">OK</button>
                    </div>
                </div>
            </div>
        </div>  

        <div name="loginForm">
            <div class="form-group">
                <label>Username</label>
                <input id="uName" type="text" ng-model="uName" required/>
            </div>
            <div class="form-group">
                <label>Password</label>
                <input id="uPass" type="password" ng-model="uPass" required/>
            </div>
            <div class="text-center">
                <button class="btn btn-default" ng-click="logear()">Submit</button>
            </div>
        </div>
    </div>
</div>

